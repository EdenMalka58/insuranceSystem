{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "DynamoDBAccess",
			"Effect": "Allow",
			"Action": [
				"dynamodb:PutItem",
				"dynamodb:GetItem",
				"dynamodb:UpdateItem",
				"dynamodb:DeleteItem",
				"dynamodb:BatchWriteItem",
				"dynamodb:Query",
				"dynamodb:Scan"
			],
			"Resource": [
				"arn:aws:dynamodb:us-east-1:ACCOUNT_ID:table/InsuranceSystem",
				"arn:aws:dynamodb:us-east-1:ACCOUNT_ID:table/InsuranceSystem/index/*"
			]
		},
		{
			"Sid": "SNSAccess",
			"Effect": "Allow",
			"Action": [
				"sns:ListTopics",
				"sns:CreateTopic",
				"sns:ListSubscriptionsByTopic",
				"sns:Subscribe",
				"sns:Publish",
				"sns:DeleteTopic"
			],
			"Resource": "*"
		}
	]
}